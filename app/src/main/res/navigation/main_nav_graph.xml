    <fragment
        android:id="@+id/ReportFragment"
        android:name="com.example.medicatiooandhealthtrackerthemain.ReportFragment"
        android:label="Report"/>



    <fragment
        android:id="@+id/ProfileFragment"
        android:name="com.example.medicatiooandhealthtrackerthemain.ProfileFragment"
        android:label="Profile"/>






    <fragment
        android:id="@+id/SettingFragment"
        android:name="com.example.medicatiooandhealthtrackerthemain.settingFragment"
        android:label="Setting"/>
    <fragment
        android:id="@+id/AddEditHealthFragment"
        android:name="com.example.medicatiooandhealthtrackerthemain.AddEditHealthFragment"
        android:label="Add Health Record" />

    <fragment
        android:id="@+id/HealthTrackerFragment"
        android:name="com.example.medicatiooandhealthtrackerthemain.HealthTrackerFragment">
        <action
            android:id="@+id/action_healthTracker_to_addEditHealth"
