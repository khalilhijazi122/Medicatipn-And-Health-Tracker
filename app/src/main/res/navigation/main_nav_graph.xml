<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/DashboardFragment">

    <fragment
        android:id="@+id/DashboardFragment"
        android:name="com.example.medicatiooandhealthtrackerthemain.DashboardFragment"
        android:label="Dashboard">
    <action
        android:id="@+id/action_medicationListFragment_to_addEditMedicationFragment"
        app:destination="@id/AddEditMedicationListFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_healthTrackerFragment"
            app:destination="@id/HealthTrackerFragment" />

    </fragment>

    <fragment
        android:id="@+id/AddEditMedicationListFragment"
        android:name="com.example.medicatiooandhealthtrackerthemain.AddEditMedicationListFragment"
        android:label="AddMedication">

    </fragment>



    <fragment
        android:id="@+id/MedicationListFragment"
        android:name="com.example.medicatiooandhealthtrackerthemain.MedicationListFragment"
